# Resend
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM="Gateway <no-reply@yourdomain.com>"

# Admin Auth (JWT)
# - Required for `/auth/login` and Bearer access to `/auth/me`, `/admin/*`, `/providers/*`
GW_JWT_SECRET=change_me_to_a_long_random_string
# Optional: access token TTL (default: 8h)
GW_JWT_TTL_SECS=28800
# Optional: refresh token TTL (default: 30 days)
GW_REFRESH_TTL_SECS=2592000

# Bootstrap (first user registration)
# - When `users` table is empty, `/auth/register` requires this code.
GATEWAY_BOOTSTRAP_CODE=change_me_bootstrap_code

# Frontend base URL for reset link
CAPTOK_BASE_URL=http://localhost:3000

# Optional: reset path (default: /reset-password)
RESET_PASSWORD_PATH=/reset-password
